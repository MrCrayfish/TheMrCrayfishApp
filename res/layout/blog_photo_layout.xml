<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@drawable/dropshadow">

    <ImageView
        android:id="@+id/blogPhoto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:contentDescription="@string/empty"
        android:padding="0dp"
        android:src="@drawable/unknown" />

    <RelativeLayout
        android:id="@+id/blogInfoContainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/blogPhoto"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/blogPhoto" >

        <ImageView
            android:id="@+id/infoBackground"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignTop="@+id/blogCaption"
            android:alpha="0.5"
            android:contentDescription="@string/empty"
            android:src="@drawable/video_info_background" />

        <TextView
            android:id="@+id/blogDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/blogCaption"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:gravity="end"
            android:text="@string/empty" />

        <TextView
            android:id="@+id/blogCaption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toStartOf="@+id/blogDate"
            android:gravity="start|bottom"
            android:paddingTop="10dp"
            android:text="@string/empty"
            android:textSize="20sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/buttonHideInfo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/empty"
        android:src="@drawable/circle_down" />

</RelativeLayout>