<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    tools:context="com.mrcrayfish.app.activities.MenuActivity" >
    
    <RelativeLayout
        android:id="@+id/loadingContainer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <TextView
            android:id="@+id/loadingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/loadingSpinner"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="@string/empty"
            android:textColor="@color/red"
            android:textSize="20sp" />

        <ProgressBar
            android:id="@+id/loadingSpinner"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/claw_spinner"
            android:padding="5dp" />
    </RelativeLayout>
	
    <ListView
        android:id="@+id/menuList"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="10dp" >
        
    </ListView>

    <ImageView
        android:id="@+id/crayfishIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/menuList"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:alpha="0.1"
        android:onClick="snap"
        android:src="@drawable/ic_crayfish"
        android:soundEffectsEnabled="false" 
        android:contentDescription="@string/empty"/>

</RelativeLayout>