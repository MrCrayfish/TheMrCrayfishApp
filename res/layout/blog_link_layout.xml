<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@drawable/dropshadow" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/blogContentContainer"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:background="@drawable/paper_repeat"
        android:scaleType="centerInside"
        android:contentDescription="@string/empty" />
    
    <RelativeLayout
        android:id="@+id/blogContentContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/blogLinkButton"
        android:paddingBottom="5dp" >

        <TextView
            android:id="@+id/blogTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="@string/empty"
            android:textColor="@color/red"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/blogDate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/blogTitle"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="10dp"
            android:text="@string/empty"
            android:textColor="#7D7D7D" />

        <TextView
            android:id="@+id/blogContent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/blogDate"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="@string/empty"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/blogLinkUrl"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/blogContent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="@string/empty"
            android:textColor="#7D7D7D" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/blogLinkButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:contentDescription="@string/empty"
        android:src="@drawable/circle_link" />

</RelativeLayout>
